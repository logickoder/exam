<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextStyle" parent="Widget.MaterialComponents.TextView" />

    <style name="TextStyle.h1">
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">34sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle.h3">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">17sp</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextStyle.dashboard_section_header">
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/dashboard_section_header</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle.exam_card_title">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle.exam_card_detail">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">17sp</item>
        <item name="android:textColor">@color/dashboard_card_text</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextStyle.toolbar_title">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19sp</item>
        <item name="android:textColor">@color/toolbar_title</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
    </style>

    <style name="TextStyle.exam_info_label">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextStyle.new_exam_section_title">
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">17sp</item>
        <item name="android:textColor">@color/create_new_exam_section_title</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle.new_exam_section_option_letter">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

    <style name="TextStyle.new_exam_section_option_text">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">18sp</item>
        <item name="android:fontFamily">@font/inter_light</item>
    </style>

    <style name="TextStyle.question_box_text">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">19sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

</resources>