<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exams" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F4F4F4</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Exams.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Exams.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Exams.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>