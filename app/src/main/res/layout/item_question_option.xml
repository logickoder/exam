<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:gravity="center">

    <RadioButton
        android:id="@+id/iqo_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="?attr/colorPrimaryVariant"
        android:checked="false"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/iqo_option"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_option"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iqo_text_option_letter"
            style="@style/TextStyle.new_exam_section_option_letter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/bg_option_letter"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="6dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:textColor="@color/create_new_exam_option_unchecked"
            tools:text="A" />

        <EditText
            android:id="@+id/iqo_textinput_option"
            style="@style/TextStyle.new_exam_section_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:background="@android:color/transparent"
            android:hint="@string/option_field_hint"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="text"
            android:singleLine="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iqo_image_remove_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_cancel"
        app:tint="@color/primary_color_light"
        tools:visibility="visible" />
</LinearLayout>